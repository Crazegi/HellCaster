<Window x:Class="HellCaster.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HellCaster: Infernal Rites"
        Width="1360"
        Height="860"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#12090B"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        MouseMove="Window_MouseMove"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2F141B" />
            <Setter Property="Foreground" Value="#FFF3DF" />
            <Setter Property="BorderBrush" Value="#FF8A3D2A" />
            <Setter Property="BorderThickness" Value="1.2" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,4" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF190D11" />
            <Setter Property="Foreground" Value="#FFF0DE" />
            <Setter Property="BorderBrush" Value="#FF7F3D32" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6,4" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF190D11" />
            <Setter Property="Foreground" Value="#FFF0DE" />
            <Setter Property="BorderBrush" Value="#FF7F3D32" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="4,3" />
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFD6C2" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid Name="PlayRoot" Visibility="Collapsed">
            <Viewbox Name="GameViewport"
                     Stretch="Uniform"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center">
                <Canvas Name="GameCanvas"
                        Width="1280"
                        Height="720"
                    Background="#150D12" />
            </Viewbox>

            <Border HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="14"
                    Background="#B8180C10"
                    Padding="10"
                    CornerRadius="8">
                <TextBlock Name="HudText"
                           Foreground="#FFE0CC"
                           FontSize="15"
                           FontFamily="Consolas"
                           Text="HUD"
                           TextWrapping="Wrap" />
            </Border>

            <Border HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="14"
                    Background="#B8180C10"
                    Padding="10"
                    CornerRadius="8"
                    Width="360">
                <TextBlock Name="StatusText"
                           Foreground="#FFCCB6"
                           FontSize="13"
                           FontFamily="Consolas"
                           TextWrapping="Wrap"
                           Text="Status" />
            </Border>

            <TextBlock Name="GameOverText"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Consolas"
                       FontWeight="Bold"
                       FontSize="40"
                       Foreground="#FFFF8167"
                       TextAlignment="Center"
                       Text="SYSTEM FAILURE
Press ESC" />
        </Grid>

        <Grid Name="MenuRoot" Background="#D6110609">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                Background="#EC1E0F14"
                    Padding="20"
                    CornerRadius="10"
                    Width="900">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="270" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="HELLCASTER"
                                   Foreground="#FFF3DF"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8" />
                        <TextBlock Text="Infernal Rites"
                                   Foreground="#FF9E74"
                                   FontSize="18"
                                   Margin="0,0,0,18" />

                        <Button Name="NewGameButton" Content="Begin Rite" Click="NewGameButton_Click" Margin="0,0,0,8" Height="34" />
                        <Button Name="LoadGameButton" Content="Load Saved Game" Click="LoadGameButton_Click" Margin="0,0,0,8" Height="34" />
                        <Button Name="SaveNowButton" Content="Seal Progress" Click="SaveNowButton_Click" Margin="0,0,0,8" Height="34" />
                        <Button Name="OpenSettingsButton" Content="Ritual Settings" Click="OpenSettingsButton_Click" Margin="0,0,0,8" Height="34" />
                        <Button Name="OpenLeaderboardButton" Content="Slayers + Relics" Click="OpenLeaderboardButton_Click" Margin="0,0,0,8" Height="34" />
                        <Button Name="ResumeButton" Content="Resume Game" Click="ResumeButton_Click" Margin="0,10,0,8" Height="34" />
                        <Button Name="ExitButton" Content="Abandon Ritual" Click="ExitButton_Click" Margin="0,0,0,8" Height="34" />
                    </StackPanel>

                    <Grid Grid.Column="2">
                        <Grid Name="HomePanel">
                            <StackPanel>
                                <TextBlock Text="Ritual Briefing"
                                           Foreground="#FFF0E1"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Margin="0,0,0,12" />
                                <TextBlock Name="HomeInfoText"
                                           Foreground="#FFCFB6"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           Text="Start a run or load your autosaved checkpoint." />
                            </StackPanel>
                        </Grid>

                        <Grid Name="SettingsPanel" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Ritual Settings"
                                           Foreground="#FFF0E1"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Margin="0,0,0,12" />

                                <TextBlock Text="Slayer Name" Foreground="#FFD6C2" />
                                <TextBox Name="PlayerNameTextBox" Margin="0,4,0,10" />

                                <TextBlock Text="Resolution" Foreground="#FFD6C2" />
                                <ComboBox Name="ResolutionComboBox" Margin="0,4,0,10" />

                                <TextBlock Text="Quality" Foreground="#FFD6C2" />
                                <ComboBox Name="QualityComboBox" Margin="0,4,0,10" />

                                <TextBlock Text="POV (Field of View)" Foreground="#FFD6C2" />
                                <ComboBox Name="PovComboBox" Margin="0,4,0,10" />

                                <CheckBox Name="FullscreenCheckBox"
                                          Content="Fullscreen"
                                          Foreground="#FFD6C2"
                                          Margin="0,2,0,10" />

                                <TextBlock Text="Difficulty" Foreground="#FFD6C2" />
                                <ComboBox Name="DifficultyComboBox" Margin="0,4,0,10" />

                                <TextBlock Text="Ritual Seed (optional)" Foreground="#FFD6C2" />
                                <TextBox Name="SeedTextBox" Margin="0,4,0,10" />

                                <Button Content="Apply Sigils" Click="ApplySettingsButton_Click" Height="34" Width="150" />
                            </StackPanel>
                        </Grid>

                        <Grid Name="LeaderboardPanel" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Slayer Ledger"
                                           Foreground="#FFF0E1"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10" />

                                <TextBlock Name="LeaderboardText"
                                           Foreground="#FFE8B1"
                                           FontFamily="Consolas"
                                           FontSize="13"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,14" />

                                <TextBlock Text="Relics"
                                           Foreground="#FFF0E1"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10" />

                                <TextBlock Name="AchievementsText"
                                           Foreground="#FFCFB6"
                                           FontFamily="Consolas"
                                           FontSize="13"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
